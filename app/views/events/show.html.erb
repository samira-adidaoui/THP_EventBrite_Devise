<div class="card mx-auto my-4 shadow" style="width: 50rem;">
  <img class="card-img" src="https://picsum.photos/id/<%= rand(1..99) %>/500/230" alt="Card image cap">
  <div class="card-body">
    <h5 class="card-title"> Title : <%= @event.title%> </h5>
    <p class="card-text"><%=@event.description%></p>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">Price : <%=@event.price%></li>
    <li class="list-group-item">Location : <%=@event.location%></li>
    <li class="list-group-item">Auhor : <%= @event.user.first_name%> <%= @event.user.last_name%></li>
  </ul>
  <div class="card-body">
    <a href="#" class="card-link">Card link</a>
    <a href="#" class="card-link">Another link</a>
  </div>
</div>